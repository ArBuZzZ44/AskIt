<%= form_with model: @question do |f| %>
	<div class="mb-3 row">
		<div class="col-sm-2 col-form-label">
			<%= f.label :title %>
		</div>

		<div class="col-sm-10">
			<%= f.text_field :title, required: true, minlength: 2, placeholder: "Title", class: 'form-control' %>
		</div>
	</div>

	<div class="mb-3 row">
		<div class="col-sm-2 col-form-label">
			<%= f.label :body %>
		</div>

		<div class="col-sm-10">
			<%= f.text_area :body, required: true, minlength: 2, class: 'form-control' %>
		</div>
	</div>

	<%= f.submit "Submit question!", class: 'btn btn-primary' %>
<% end %>